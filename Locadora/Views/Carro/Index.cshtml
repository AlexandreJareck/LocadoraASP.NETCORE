@model List<Carro>

<h2>Gerenciamento de Carros</h2>
<form asp-action="BuscarCarroPlaca" method="post">
    <a asp-controller="Carro" class="btn btn-outline-success col-md-2" asp-action="Cadastrar">Cadastrar</a>
    <div style="float:right">
        <div class="form-group">
            <div class="form-inline">
                <input class="form-control col-md-7" type="text" placeholder="Pesquisar pela placa" name="placa" />
                <button class="btn btn-outline-info col-md-4" style="margin-left:10px;" asp-controller="Carro" asp-action="BuscarCarroPlaca">Buscar</button>
            </div>
        </div>
    </div>
</form>
<div class="table-responsive" style="margin-top:5px;">
    <table class="table table-hover table-striped">
        <thead>
            <tr class="table-primary">
                <th scope="col">Nome</th>
                <th scope="col">Marca</th>
                <th scope="col">Preço</th>
                <th scope="col">Ano</th>
                <th scope="col">Placa</th>
                <th scope="col">ValorPorDia</th>
                <th scope="col">ValorPorHora</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Carro item in Model)
            {
                <tr>
                    <td>@item.Modelo</td>
                    <td>@item.Marca</td>
                    <td>@item.Valor</td>
                    <td>@item.AnoModelo</td>
                    <td>@item.Placa</td>
                    <td>@item.ValorPorDia</td>
                    <td>@item.ValorPorHora</td>
                    <td>@item.Status</td>
                    <td>
                        <a class="btn btn-outline-danger" asp-controller="Carro" asp-action="RemoverCarro" asp-route-id="@item.IdVeiculo">Remover</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Carro" asp-action="EditarCarro" asp-route-id="@item.IdVeiculo">Alterar</a>

                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
