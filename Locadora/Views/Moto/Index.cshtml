@model List<Moto>

<h2>Gerenciamento de Motos</h2>
<form asp-action="BuscarMotoPlaca" method="post">
    <a asp-controller="Moto" class="btn btn-outline-success col-md-1" asp-action="Cadastrar" data-toggle="tooltip" data-placement="top" title="Cadastrar Veiculo">
        <i class="fas fa-motorcycle"></i>
    </a>
    <div style="float:right">
        <div class="form-group">
            <div class="form-inline">
                <input class="form-control col-md-7" type="text" placeholder="Pesquisar pela placa" name="placa" />
                <button class="btn btn-outline-info col-md-4" style="margin-left:10px;" asp-controller="Moto" asp-action="BuscarMotoPlaca" data-toggle="tooltip" data-placement="top" title="Pesquisar por Placa">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>
<div class="table-responsive" style="margin-top:5px;">
    <table class="table table-hover table-striped">
        <thead>
            <tr class="table-primary">
                <th>Nome</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Cor</th>
                <th>Ano</th>
                <th>Placa</th>
                <th>ValorPorDia</th>
                <th>ValorPorHora</th>
                <th>Status</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Moto item in Model)
            {
                <tr>
                    <td>@item.Modelo</td>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Cor</td>
                    <td>@item.AnoModelo</td>
                    <td>@item.Placa</td>
                    <td>@item.ValorPorDia</td>
                    <td>@item.ValorPorHora</td>
                    <td>@item.Status</td>
                    <td>
                        <a class="btn btn-outline-danger" asp-controller="Moto" asp-action="RemoverMoto" asp-route-id="@item.IdVeiculo" data-toggle="tooltip" data-placement="top" title="Deletar">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Moto" asp-action="EditarMoto" asp-route-id="@item.IdVeiculo" data-toggle="tooltip" data-placement="top" title="Alterar">
                            <i class="far fa-edit"></i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>

    </table>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
</div>
