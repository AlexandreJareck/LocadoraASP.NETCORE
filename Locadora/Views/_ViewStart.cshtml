
@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();

    if (controllerName.Equals("Home"))
    {
        Layout = "~/Views/Shared/_LayoutHome.cshtml";
    }
    else if (controllerName.Equals("Administrador") || (controllerName.Equals("Carro"))
        || (controllerName.Equals("Moto")) || (controllerName.Equals("AdmCliente")))
    {
        Layout = "~/Views/Shared/_LayoutAdm.cshtml";
    }
    else if (controllerName.Equals("Cliente") || (controllerName.Equals("Carro"))
        || (controllerName.Equals("Moto")))
    {
        Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    }

}
