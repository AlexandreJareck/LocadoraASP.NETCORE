@model Cliente
<form asp-action="EditarCliente" method="post">
    <input type="hidden" asp-for="IdCliente" />
    <h2 class="text-info">Editar Cliente</h2>
    <div class="form-group" id="Id">
        <label>Id:</label>
        <input type="text" class="form-control col-md-4" asp-for="IdCliente" readonly="" />
    </div>
    <div class="form-group" id="Cpf">
        <label>Cpf</label>
        <input type="text" class="form-control col-md-4" asp-for="Cpf" readonly="" />
    </div>
    <div class="form-group" id="Rg">
        <label>Rg</label>
        <input type="text" class="form-control col-md-4" asp-for="Rg" readonly="" />
    </div>
    <div class="form-group" id="Senha">
        <label>Senha</label>
        <input type="text" class="form-control col-md-4" asp-for="Senha" readonly="" />
    </div>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <span asp-validation-for="Nome"></span>
        <input class="form-control col-md-4" asp-for="Nome" required="" />
    </div>
    <div class="form-group">
        <label for="Descricao">Categoria Cng</label>
        <select asp-for="CategoriaCnh" class="form-control col-md-4" required="">
            <option></option>
            <option>A</option>
            <option>B</option>
            <option>AB</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Cnh">Cnh</label>
        <input class="form-control col-md-4" asp-for="Cnh" required="" />
    </div>
    <div class="form-group">
        <label for="Status">Status</label>
        <select asp-for="Status" class="form-control col-md-4">
            <option>DISPONIVEL</option>
            <option>CANCELADO</option>
        </select>
    </div>
    <div class="form-group">
        <label for="PossuiReserva">Possui Reserva</label>
        <select asp-for="PossuiReserva" class="form-control col-md-4">
            <option>SIM</option>
            <option>NAO</option>
        </select>
    </div>
    <button class="btn btn-outline-success col-md-4" type="submit">Salvar</button>
</form>

