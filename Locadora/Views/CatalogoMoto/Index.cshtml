@model List<Moto>

<h4 class="text-info" style="margin-bottom:20px; margin-top:20px;">Catalogo de Motos</h4>
<div asp-validation-summary="ModelOnly" class="alert alert-dismissible alert-danger col-lg-12" style="float:right;">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
</div>
<div class="row" id="Moto">
    @foreach (Moto item in Model)
    {

        <div class="col-md-3" style="text-align:center; margin-bottom:15px">
            <a asp-action="InformacoesMoto" asp-controller="CatalogoMoto" asp-route-id="@item.IdVeiculo">
                <img src="~/locadoraimagens/@item.Imagem" style="width:200px;height:180px" class="img-thumbnail" /><br />
            </a>
            <a asp-action="InformacoesMoto" asp-controller="CatalogoMoto" asp-route-id="@item.IdVeiculo"></a>
            <b style="color:whitesmoke">Marca: </b><span class="text-info">@item.Marca</span><br />
            <b style="color:whitesmoke">Modelo: </b> <span class="text-info">@item.Modelo</span><br />
        </div>
    }
</div>



