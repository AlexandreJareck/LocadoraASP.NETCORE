@model List<Cliente>

<h2>Gerenciamento de Clientes</h2>

<table class="table table-hover table-striped">
    <thead>
        <tr class="table-primary">
            <th>Nome</th>
            <th>Cpf</th>
            <th>Rg</th>
            <th>Cnh</th>
            <th>Categoria Cnh</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Cliente item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Cpf</td>
                <td>@item.Rg</td>
                <td>@item.Cnh</td>
                <td>@item.CategoriaCnh</td>
                <td>@item.Status</td>
                <td>
                    <a class="btn btn-danger" asp-action="RemoverCliente" asp-route-id="@item.IdCliente">Remover</a>
                </td>
                <td>
                    <a class="btn btn-info" asp-action="EditarCliente" asp-route-id="@item.IdCliente">Alterar</a>

                </td>
            </tr>
        }
    </tbody>
</table>

