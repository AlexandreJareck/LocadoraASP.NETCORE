@model Carro

<table>
    <tr>
        <td>
            <img src="~/locadoraimagens/@Model.Imagem" class="rounded"
                 style="width:400px;height:300px" />
        </td>
        <td style="vertical-align:top;padding-left:10px">
            <b>Marca:</b>
            <p>@Model.Marca</p>
            <b>Modelo:</b>
            <p>@Model.Modelo</p>
            <b>Ano:</b>
            <p>@Model.AnoModelo</p>
            <b>Placa:</b>
            <p>@Model.Placa</p>
            <b>Valor por dia:</b>
            <p>@Model.ValorPorDia.ToString("C2")</p>
            <b>Valor por hora:</b>
            <p>@Model.ValorPorHora.ToString("C2")</p><br />
            <a asp-action="AlugarCarro" asp-controller="Clientes"
               class="btn btn-outline-primary"  asp-route-id="@Model.IdVeiculo">Alugar Carro</a>


        </td>
    </tr>
</table>


