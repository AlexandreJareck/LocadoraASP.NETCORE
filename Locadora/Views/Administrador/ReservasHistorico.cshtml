@model List<Reserva>

<h2>Aprovação de Reservas</h2>

<div class="table-responsive" style="margin-top:5px;">
    <table class="table table-hover table-striped">
        <thead>
            <tr class="table-primary">
                <th>Data da Reserva</th>
                <th>Data Prev Devolução</th>
                <th>Id Cliente</th>
                <th>Id Veic</th>
                <th>Status</th>
                <th>Valor Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Reserva item in Model)
            {
                <tr>
                    <td>@item.DataReserva</td>
                    <td>@item.DataPrevisaoDevolucao</td>
                    <td>@item.ClienteId</td>
                    @if (item.CarroId == null)
                    {
                        <td>@item.MotoId</td> }
                    else
                    {
                        <td>@item.CarroId</td>}
                    <td>@item.Status</td>
                    <td>@item.ValorTotal.ToString("C2")</td>
                    <!--Pensar em colocar um Tipo Veiculo na classe reserva-->
                </tr>
            }
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
</div>



