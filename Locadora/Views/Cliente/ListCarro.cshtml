@model List<Carro>

<h2> Carros </h2>

<div class="table-responsive" style="margin-top:5px;">
    <table class="table table-hover table-striped">
        <thead>
            <tr class="table-primary">
                <th scope="col">Nome</th>
                <th scope="col">Marca</th>
                <th scope="col">Preço</th>
                <th scope="col">Ano</th>
                <th scope="col">Placa</th>
                <th scope="col">ValorPorDia</th>
                <th scope="col">ValorPorHora</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Carro item in Model)
            {
                <tr>
                    <td>@item.Modelo</td>
                    <td>@item.Marca</td>
                    <td>@item.Valor</td>
                    <td>@item.AnoModelo</td>
                    <td>@item.Placa</td>
                    <td>@item.ValorPorDia</td>
                    <td>@item.ValorPorHora</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>

    </table>
</div>
