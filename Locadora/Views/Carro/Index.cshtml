@model List<Carro>

<h2>Gerenciamento de Carros</h2>
<div>

    <a asp-controller="Carro" class="btn btn-outline-success col-md-2" asp-action="Cadastrar">Cadastrar</a>
</div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="table-primary">
            <th>Nome</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Cor</th>
            <th>Ano</th>
            <th>Placa</th>
            <th>ValorPorDia</th>
            <th>ValorPorHora</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Carro item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Marca</td>
            <td>@item.veiculo</td>
            <td>@item.Cor</td>
            <td>@item.Ano_Modelo</td>
            <td>@item.Placa</td>
            <td>@item.ValorPorDia</td>
            <td>@item.ValorPorHora</td>
            <td>@item.Status</td>
            <td>
                <a class="btn btn-danger" asp-controller="Carro" asp-action="RemoverCarro" asp-route-id="@item.IdVeiculo">Remover</a>
            </td>
            <td>
                <a class="btn btn-info" asp-controller="Carro" asp-action="EditarCarro" asp-route-id="@item.IdVeiculo">Alterar</a>

            </td>
        </tr>
        }
    </tbody>

</table>